@using Microsoft.AspNetCore.Identity
@using MuvyHub.Models
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="manifest" href="/manifest.json" />
    <meta name="theme-color" content="#141414" />
    <title>@ViewData["Title"] - NexTube</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        .navbar {
            background-color: transparent !important;
            padding-top: 1rem;
        }

        .nav-link.active {
            color: #E50914 !important;
        }

        .form-control {
            background-color: #282828 !important;
            border-color: #282828 !important;
        }

            .form-control:focus {
                box-shadow: 0 0 0 0.25rem rgba(229, 9, 20, 0.25);
                border-color: #E50914 !important;
            }
        #session-invalidation-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0,0,0,0.9);
            z-index: 9999;
            color: white;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
        }

        #ageDisclaimerModal .modal-content {
            background-color: #1a1a1a;
            color: white;
            border-radius: 8px;
        }

        #ageDisclaimerModal .modal-header,
        #ageDisclaimerModal .modal-footer {
            border-color: #333;
        }

        #ageDisclaimerModal .btn-danger {
            background-color: #E50914;
            border-color: #E50914;
        }

        .navbar-brand {
            color: #E50914 !important;
            font-weight: 800;
            letter-spacing: 0.05em;
            text-transform: uppercase;
        }

        .blur-background #page-content-wrapper {
            filter: blur(5px);
            -webkit-filter: blur(5px);
            transition: filter 0.3s ease-out;
        }

        .blur-background {
            overflow: hidden;
        }

    </style>
</head>
<body class="text-light">

    <div id="session-invalidation-overlay">
        <div>
            <h2 class="mb-3">Session Expired</h2>
            <p>This account has been signed into from another location.</p>
            <p>Redirecting to the login page...</p>
        </div>
    </div>

    <div id="page-content-wrapper">
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        NexTube
                    </a>
                    
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <div class="d-flex d-lg-none align-items-center gap-2">
                            <a class="btn btn-netflix" asp-controller="Person" asp-action="Index">Contacts</a>
                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                        </div>
                    }

                    <div class="collapse navbar-collapse" id="navbarContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            @if (SignInManager.IsSignedIn(User))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Person" asp-action="Index">Contacts</a>
                                </li>
                            }
                            
                            @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Premium" asp-action="Categories">Categories</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="ManageUsers">Admin</a>
                                </li>
                            }

                            @if (SignInManager.IsSignedIn(User))
                            {
                                <li class="nav-item d-lg-none">
                                    <span class="nav-link disabled">Hello, @User.Identity?.Name</span>
                                </li>
                                <li class="nav-item d-lg-none">
                                    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post">
                                        <button type="submit" class="btn btn-danger">Logout</button>
                                    </form>
                                </li>
                            }
                        </ul>

                        @if (SignInManager.IsSignedIn(User))
                        {
                            <ul class="navbar-nav d-none d-lg-flex">
                                <li class="nav-item d-flex align-items-center">
                                    <span class="navbar-text me-3">Hello, @User.Identity?.Name</span>
                                </li>
                                <li class="nav-item d-flex align-items-center">
                                    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post">
                                        <button type="submit" class="btn btn-danger">Logout</button>
                                    </form>
                                </li>
                            </ul>
                        }
                    </div>

                    @if (!SignInManager.IsSignedIn(User))
                    {
                        <a class="btn btn-spotify" asp-controller="Account" asp-action="Login">Login</a>
                    }
                    else
                    {
                    }
                </div>
            </nav>
        </header>
       

        <div id="page-progress-bar"></div>

        <div id="main-content" class="container-fluid">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

    </div>
    <div class="modal fade" id="subscribeModal" tabindex="-1" aria-labelledby="subscribeModalLabel" aria-hidden="true">
