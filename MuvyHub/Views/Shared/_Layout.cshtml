                        </svg>
                        Subscribe on WhatsApp
                    </a>
                </div>
            </div>
        </div>
    </div>


    <footer class="footer mt-auto py-3 text-secondary border-top border-dark">
        <div class="container text-center">
            &copy; @DateTime.Now.Year - NexTube
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
        $(document).ready(function() {
            const progressBar = $('#page-progress-bar');

            function startProgress() {
                progressBar.css('width', '0%').addClass('active').stop().animate({ width: '70%' }, 1500, 'linear');
            }

            function completeProgress() {
                progressBar.stop().animate({ width: '100%' }, 200, 'linear', function() {
                    setTimeout(() => {
                        $(this).removeClass('active').css('width', '0%');
                    }, 200);
                });
            }

            $(document).ajaxStart(startProgress).ajaxStop(completeProgress);

            $(window).on('beforeunload', function() {
                startProgress();
            });

            $(window).on('pageshow', function(event) {
                if (event.originalEvent.persisted) {
                    progressBar.removeClass('active').css('width', '0%');
                }
            });
        });
    </script>

    @if (SignInManager.IsSignedIn(User))
    {
        <script>
            const authCheckInterval = setInterval(function() {
                console.log("checking");
                fetch('/Account/CheckAuthStatus')
                    .then(response => {
                        console.log(response);
                        if (!response.ok) {
                            throw new Error('Session invalidated');
                        }
                    })
                    .catch(error => {
                        console.log("invalid");
                        clearInterval(authCheckInterval); 
                        document.getElementById('session-invalidation-overlay').style.display = 'flex';
                        setTimeout(() => {
                           window.location.href = '/Account/Login'; 
                        }, 3000);
                    });
            }, 5000);
        </script>
    }

    <script>
        $(document).ready(function () {
            function setCookie(name, value, days) {
                let expires = "";
                if (days) {
                    const date = new Date();
                    date.setTime(date.getTime() + (days * 24 * 60 * 60 * 1000));
                    expires = "; expires=" + date.toUTCString();
                }
                document.cookie = name + "=" + (value || "") + expires + "; path=/";
            }

            function getCookie(name) {
                const nameEQ = name + "=";
                const ca = document.cookie.split(';');
                for(let i=0; i < ca.length; i++) {
                    let c = ca[i];
                    while (c.charAt(0) === ' ') c = c.substring(1, c.length);
                    if (c.indexOf(nameEQ) === 0) return c.substring(nameEQ.length, c.length);
                }
                return null;
            }

            const ageDisclaimerModal = new bootstrap.Modal(document.getElementById('ageDisclaimerModal'));
            const pageContentWrapper = $('#page-content-wrapper');
            const body = $('body'); 


            ageDisclaimerModal._element.addEventListener('hidden.bs.modal', function () {
                body.removeClass('blur-background');
            });

            let searchTimeout;
            $('#searchInput').on('keyup', function () {
                clearTimeout(searchTimeout);
                const query = $(this).val();

                if (query.length > 1) {
                    $('#default-movies').hide();
                    $('#search-results-container').show().html('<div class="text-center text-secondary mt-5"><h4>Searching...</h4></div>');

                    searchTimeout = setTimeout(function() {
                        $.ajax({
                            url: '/Movies/Search',
                            type: 'GET',
                            data: { query: query },
                            success: function (data) {
                                $('#search-results-container').html(data);
                            },
                            error: function () {
                                $('#search-results-container').html('<div class="text-center text-danger mt-5"><h4>Error loading results.</h4></div>');
                            }
                        });
                    }, 300);

                } else {
                    $('#search-results-container').hide().empty();
                    $('#default-movies').show();
                }
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>