@model MuvyHub.Models.Person

<div class="modal-header border-0">
    <h5 class="modal-title visually-hidden">@Model.FullName</h5>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body overflow-auto">
    <style>
       
    </style>

    <div class="details-modal">
        <div class="profile-section">
            <div class="profile-image-container">
                <img src="@Model.ProfilePicturePath" alt="@Model.FullName" class="profile-image popup-trigger" data-img-src="@Model.ProfilePicturePath" />
            </div>
            <div class="profile-info">
                <h2>
                    @Model.FullName
                    @if (Model.IsVerified)
                    {
                        <span class="verified-badge">Verified</span>
                    }
                </h2>
                <p class="text-muted"><strong>Date of Birth:</strong> @Model.DateOfBirth.ToString("MMMM dd, yyyy")</p>
                <a class="whatsapp-btn mt-2" href="https://wa.me/@Model.WhatsappNumber" target="_blank" rel="noopener noreferrer" aria-label="Chat on WhatsApp">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-whatsapp" viewBox="0 0 16 16">
                        <path d="M13.601 2.326a7.456 7.456 0 0 0-10.56 10.56l-.657 2.409 2.474-.65a7.461 7.461 0 0 0 8.743-12.32Zm-3.89 9.3c-.18.5-1.03.95-1.67 1.01a2.457 2.457 0 0 1-1.13-.3l-.48-.3c-.42-.3-.9-.5-1.13-.8-.06-.04-.1-.08-.1-.14a1.095 1.095 0 0 1 0-.3c.03-.04.06-.1.1-.13.3-.3.5-.6.7-.8.12-.18.2-.3.4-.4.04 0 .08 0 .1 0 .1 0 .2 0 .3.05.2 0 .3.07.5.12a.21.21 0 0 0 .1 0c.05 0 .1 0 .13.03.06 0 .12.04.2.12.1.1.2.3.3.5.1.3 0 .6-.1.7Z" />
                    </svg>
                    WhatsApp
                </a>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <div class="description">@Model.Description</div>
        }

        @if (Model.OtherMediaPaths != null && Model.OtherMediaPaths.Any())
        {
            <div class="media-row">
                @foreach (var mediaPath in Model.OtherMediaPaths)
                {
                    var ext = System.IO.Path.GetExtension(mediaPath).ToLowerInvariant();
                    if (ext == ".mp4" || ext == ".webm" || ext == ".ogg")
                    {
                        <video controls preload="none" tabindex="0" aria-label="Video media" class="popup-trigger" data-img-src="@mediaPath"></video>
                    }
                    else
                    {
                        <img src="@mediaPath" alt="Media image" loading="lazy" class="popup-trigger" data-img-src="@mediaPath" />
                    }
                }
            </div>
        }
    </div>
</div>
<div class="modal-footer border-0 d-sm-none justify-content-center">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
</div>