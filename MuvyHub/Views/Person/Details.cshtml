@model MuvyHub.Models.Person
@using System.Net
@using MuvyHub.Helpers
@{
    ViewData["Title"] = Model.FullName;
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/lity/2.4.1/lity.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/lightgallery@2.7.1/css/lightgallery-bundle.min.css" />

<div class="details-modal">
    <div class="profile-section">
        <div class="profile-image-container">
            <img src="@Model.ProfilePicturePath" alt="@Model.FullName" class="profile-image" />
        </div>
        <div class="profile-info">
            <h2>
                @Model.FullName
                @if (Model.IsVerified)
                {
                    <span class="verified-badge">Verified</span>
                }
            </h2>
            @{
                var today = DateTime.Today;
                var age = today.Year - Model.DateOfBirth.Year;
                if (Model.DateOfBirth.Date > today.AddYears(-age))
                {
                    age--;
                }
            }
            <p class="text-muted"><strong>Age:</strong> @age</p>
            <p class="text-muted"><strong>Location:</strong> @ViewHelper.GetDisplayName(Model.Location)</p>
            @{
                var whatsappMessage = WebUtility.UrlEncode("Hi, I'm interested in your services.");
                var whatsappLink = $"https://wa.me/{Model.WhatsappNumber}?text={whatsappMessage}";
            }

            <a href="@whatsappLink" target="_blank" class="btn btn-lg btn-success mt-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-whatsapp me-2" viewBox="0 0 16 16">
                    <path d="M13.601 2.326A7.854 7.854 0 0 0 7.994 0C3.627 0 .068 3.558.064 7.926c0 1.399.366 2.76 1.057 3.965L0 16l4.204-1.102a7.933 7.933 0 0 0 3.79.965h.004c4.368 0 7.926-3.558 7.93-7.93A7.898 7.898 0 0 0 13.6 2.326zM7.994 14.521a6.573 6.573 0 0 1-3.356-.92l-.24-.144-2.494.654.666-2.433-.156-.251a6.56 6.56 0 0 1-1.007-3.505c0-3.626 2.957-6.584 6.591-6.584a6.56 6.56 0 0 1 4.66 1.931 6.557 6.557 0 0 1 1.928 4.66c-.004 3.639-2.961 6.592-6.592 6.592zm3.615-4.934c-.197-.099-1.17-.578-1.353-.646-.182-.065-.315-.099-.445.099-.133.197-.513.646-.627.775-.114.133-.232.148-.43.05-.197-.1-.836-.308-1.592-.985-.59-.525-.985-1.175-1.103-1.372-.114-.198-.011-.304.088-.403.087-.088.197-.232.296-.346.1-.114.133-.198.198-.33.065-.134.034-.248-.015-.347-.05-.099-.445-1.076-.612-1.47-.16-.389-.323-.335-.445-.34-.114-.007-.247-.007-.38-.007a.729.729 0 0 0-.529.247c-.182.198-.691.677-.691 1.654 0 .977.71 1.916.81 2.049.098.133 1.394 2.132 3.383 2.992.47.205.84.326 1.129.418.475.152.904.129 1.246.08.38-.058 1.171-.48 1.338-.943.164-.464.164-.86.114-.943-.049-.084-.182-.133-.38-.232z" />
                </svg>
                Chat
            </a>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.Description))
    {
        <div class="description mt-1">@Model.Description</div>
    }

    @if (Model.OtherMediaPaths != null && Model.OtherMediaPaths.Any())
    {
        <div id="lightgallery" class="media-row mt-4">
            @foreach (var mediaPath in Model.OtherMediaPaths)
            {
                var ext = System.IO.Path.GetExtension(mediaPath).ToLowerInvariant();
                if (ext != ".mp4" && ext != ".webm" && ext != ".ogg")
                {
                    <a data-src="@mediaPath">
                        <img src="@mediaPath" alt="Media image" loading="lazy" />
                    </a>
                }
            }
        </div>

        @foreach (var mediaPath in Model.OtherMediaPaths)
        {
            var ext = System.IO.Path.GetExtension(mediaPath).ToLowerInvariant();
            if (ext == ".mp4" || ext == ".webm" || ext == ".ogg")
            {
                <div class="mt-4 mb-4">
                    <video controls tabindex="0" aria-label="Video media" src="@mediaPath" class="video-preview"></video>
                </div>
            }
        }
    }
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lity/2.4.1/lity.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/lightgallery@2.7.1/lightgallery.umd.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/lightgallery@2.7.1/plugins/thumbnail/lg-thumbnail.umd.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/lightgallery@2.7.1/plugins/zoom/lg-zoom.umd.min.js"></script>
    <script>
         document.addEventListener("DOMContentLoaded", function () {
            const gallery = document.getElementById('lightgallery');
            if (gallery) {
                lightGallery(gallery, {
                    plugins: [lgThumbnail, lgZoom],
                    speed: 300,
                    download: false,
                    thumbnail: true,
                    thumbWidth: 60,
                    thumbHeight: '40px',
                    showThumbByDefault: true
                });
            }
            gallery.querySelectorAll('a').forEach(link => {
                link.addEventListener('click', e => e.preventDefault());
            });
        });
    </script>
}